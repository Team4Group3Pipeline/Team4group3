pipeline{
	agent{
		label 'slave3'
	}
	stages{
		stage('1-cloneRepo'){
			steps{
				sh 'cat /etc/password'
			}
		}
		stage('2-parallel-jobs'){
			parallel{
				stage('1-subjob1'){
					steps{
						sh 'lscpu'
					}
				}
				stage('2-subjob2'){
					when {
						branch 'slave3'
					}
					steps{
						sh 'df -h'
					}
				}
			}
		}
		stage('3-codetest'){
			agent {
				label 'slave1'
			}
			steps{
				sh 'free -m'
			}
		}
		stage('4-closing'){
			agent{
				label 'slave2'
			}
			steps{
				echo "we are done"
			}
		}
	}
}
